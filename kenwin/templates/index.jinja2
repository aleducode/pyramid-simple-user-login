{% extends "layout.jinja2" %}

{% block css %}
<style>
    .emoji {
        font-size: calc(100px + 4vw);
        min-width: 1.4em;
        margin: 0.3em 0.4em;
        text-align: center;
    }

    .emoji::after {
        animation-timing-function: linear;
        animation-iteration-count: infinite;
    }



    .wave::after {
        content: 'âœ‹';
        --emoji: 'ðŸ‘‹';
        animation-name: twoFrames;
        animation-duration: 1s;
    }

    @keyframes twoFrames {
        50% {
            content: var(--emoji);
        }
    }

    @keyframes threeFrames {
        33.333% {
            content: var(--emoji-1);
        }

        66.666% {
            content: var(--emoji-2);
        }
    }
</style>
{% endblock css %}
{% block content %}
<div class="content">

    <h1><span class="font-semi-bold">Hi {{request.user.name}} !!!</span> <a href="{{url_logout}}"
            class="btn btn-primary">
            Logout</a> </h1>

    <p class="lead">Welcome to a&nbsp;Pyramid application based on <span class="font-normal">Cookiecutter</span>.</p>
    <span class="emoji wave" role="img" aria-label="wave"></span>
</div>
{% endblock content %}
{% block js %}
<script>
document.onreadystatechange = () => {
    if (document.readyState === 'complete') {
        alert('You are in session with username: {{request.user.name}}.')
    }
};
</script>
{% endblock js %}